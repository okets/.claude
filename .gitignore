# Claude Code global configuration gitignore
# Only track configuration files, not runtime data

# Ignore runtime directories
ide/
logs/
projects/
todos/
statsig/
shell-snapshots/
.claude/smarter-claude/

# Ignore runtime files
*.lock
*.log
*.jsonl
settings.local.json
tool_executions.jsonl

# Ignore database files (contain session data)
queryable-context.db      # New per-project database
*.db

# Ignore Python runtime files
__pycache__/
*.pyc
*.pyo
*.pyd
.Python

# Ignore temp files and debug output
/tmp/
debug_*.json
claude_debug_*.json

# Ignore macOS system files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore contextual logging temp files
claude_contextual_data.json
claude_main_tools.json
claude_subagent_*.json

# Allow all other files and directories by default
# (commands/, hooks/, schema.sql, setup_database.py, etc.)